# Environment Variables untuk Production Publik
DJANGO_SETTINGS_MODULE=mpls.production_settings
SECRET_KEY=your-super-strong-secret-key-minimum-50-characters-here
DEBUG=False

# Database - PostgreSQL untuk production (auto-provided oleh hosting)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Security Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Optional: Email Settings untuk notifikasi
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: Cloud Storage (untuk file upload besar)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Optional: Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
